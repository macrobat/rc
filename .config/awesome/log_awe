--FUNKAR!!!!!
--To execute an application only once, e.g. for restarting awesome,
--use this function (from the awesome wiki):
function run_once(prg)
	if not prg then
		do return nil end
	end
	os.execute("x=" .. prg .. "; pgrep -u $USERNAME -x " .. prg .. " || (" .. prg .. " &)")
end
-- AUTORUN APPS!
run_once("parcellite")

